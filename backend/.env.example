# OpenAI (embeddings + chat LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_CHAT_MODEL=gpt-4.1

# Database (for chat history / auth persistence)
# Local Postgres (development):
DATABASE_URL=postgresql+asyncpg://user:password@127.0.0.1:5432/scheme_saathi

# Application Settings
APP_NAME=Scheme Saathi
APP_VERSION=1.0.0
DEBUG=True

# CORS Settings (for frontend)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Data Paths
SCHEMES_DATA_PATH=data_f/all_schemes.json
CHROMA_DB_PATH=chroma_db

# RAG Settings
TOP_K_SCHEMES=10
SIMILARITY_THRESHOLD=0.3

# Supabase Auth (JWT Secret from Supabase Dashboard → Project Settings → API)
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
